
<% if flash[:message] %>
    <h2><%= flash[:message] %></h2>
<% end %>


<h1>Create New Heroine</h1>
<%= form_for(@heroine) do |f| %>
    <h2><%=f.label :name %></h2>
    <%=f.text_field :name %>
    <br>
    <h2><%=f.label :super_name %></h2>
    <%=f.text_field :super_name %>
    <br>
    <h2><label for="power">Power: </label></h2>
    <%= f.collection_select(:power_id, Power.all, :id, :name, prompt: true)%>
    <br>
    <%=f.submit %>
<% end %>
  