
<% if flash[:message] %>
    <h2><%= flash[:message] %></h2>
<% end %>


<h1>Create New Heroine</h1>
<%= form_for(@heroine) do |f| %>
    <h4><%=f.label :name %></h4>
    <%=f.text_field :name %>
    <h4><%=f.label :super_name %></h4>
    <%=f.text_field :super_name %>
    <h4><label for="power">Power: </label></h4>
    <%= f.collection_select(:power_id, Power.all, :id, :name, prompt: true)%>
    <br>
    <%=f.submit %>
<% end %>
